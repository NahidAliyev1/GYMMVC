@using GymMVC.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model List<ChooseProgram>

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Choose Programs</h6>
                <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Create">Create</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col"> Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ChooseProgram item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td><img src="~/assets/uploadedImages/@item.ImgPath" alt="Alternate Text" /></td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info m-2">Info</a>
                                    <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Create" asp-route-id="@item.Id" class="btn btn-warning m-2">Update</a>
                                    <a asp-area="Admin" asp-controller="ChooseProgram" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-2">Delete</a>
                                </td>
                            </tr>
                            
                        }

                    </tbody>
                </table>
            </div>
        </div>
